package-description-file: PACKAGE-README.md
package-url: https://github.com/build2-packaging/libigl/
package-email: packaging@build2.org

depends: * build2 >= 0.16.0
depends: * bpkg >= 0.16.0

depends:
\
libigl-core == $
{
  # If the precompilation of this package has been configured,
  # the dependency is required to use the same compilation mode.
  #
  prefer
  {
    if ($config.origin(config.libigl_opengl.header_only) != 'undefined')
      config.libigl_core.header_only = $config.libigl_opengl.header_only
  }

  accept (($config.origin(config.libigl_opengl.header_only) == 'undefined') \
          || ($config.libigl_core.header_only == $config.libigl_opengl.header_only))
}
\

depends: libigl-glad == $

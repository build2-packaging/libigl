import glad = libigl-glad%lib{igl-glad}
import igl_core = libigl-core%lib{igl-core}
import igl_core_compiled = libigl-core%liba{igl-core-compiled}

./: lib{igl-opengl}: igl/opengl/{hxx ixx}{*} $glad $igl_core
{
  cxx.export.poptions = "-I$src_root"
  cxx.export.libs = $glad $igl_core
}

./: liba{igl-opengl-compiled}: igl/opengl/{hxx cxx}{*} $glad $igl_core_compiled
{
  cxx.export.poptions = "-I$src_root"
  cxx.export.libs = $glad $igl_core_compiled
}

{hxx ixx}{*}: install = include/igl/opengl/

./: manifest legal{LICENSE*} doc{*.md}
./: tests/: install = false

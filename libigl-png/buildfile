# Dependencies
#
import libs = stb_image%lib{stb_image}
import libs += stb_image_write%lib{stb_image_write}
import igl_opengl = libigl-opengl%lib{igl-opengl}

# Utility Library for the stb Implementations
#
libul{stb}: cxx{*} $libs

# Library Sources
#
# This library is not binless
# as the stb libary implementations are included in 'stb_image.cpp'.
#
./: lib{igl-png}: igl/png/{hxx ixx}{*} libul{stb} $igl_opengl
{
  cxx.export.poptions = "-I$src_root"
  cxx.export.libs = $libs $igl_opengl
}

# Build Options
#
cxx.poptions =+ "-I$src_root"

# For pre-releases use the complete version to make sure they cannot be used
# in place of another pre-release or the final version. See the version module
# for details on the version.* variable values.
#
if $version.pre_release
  liba{igl-png}: bin.lib.version = "-$version.project_id"
else
  liba{igl-png}: bin.lib.version = "-$version.major.$version.minor"

# Mark header and inclusion files as to be installed.
# Inclusion files are only installed when depending on lib{igl-core}.
#
{hxx ixx}{*}: install = include/igl/png/

./: manifest legal{LICENSE*} doc{*.md}
./: tests/: install = false

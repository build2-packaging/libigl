cxx.std = latest

using cxx

hxx{*}: extension = h
ixx{*}: extension = cpp
txx{*}: extension = tpp
cxx{*}: extension = cpp

hxx{*}: cxx.importable = false

test.target = $cxx.target

exe{*}: test = true

# Provide common importations and build options.
#
import libs = catch2%lib{catch2}
cxx.poptions += -DLIBIGL_DATA_DIR="\"$regex.replace($src_root, '\\', '\\\\')/data\""
cxx.poptions += -DCATCH_CONFIG_ENABLE_BENCHMARKING
cxx.poptions =+ "-I$src_root"

depends: * build2 >= 0.16.0
depends: * bpkg >= 0.16.0

depends:
\
libigl-glfw == $
{
  # If the precompilation of this package has been configured,
  # the dependency is required to use the same compilation mode.
  #
  prefer
  {
    if ($config.origin(config.libigl_imgui.header_only) != 'undefined')
      config.libigl_glfw.header_only = $config.libigl_imgui.header_only
  }

  accept (($config.origin(config.libigl_imgui.header_only) == 'undefined') \
          || ($config.libigl_glfw.header_only == $config.libigl_imgui.header_only))
}
\

depends: libimgui-platform-glfw ^1.85.0
depends: libimgui-render-opengl3 ^1.85.0
